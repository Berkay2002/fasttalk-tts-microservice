# ============================================================================
# TTS Service Environment Configuration
# Copy this file to .env and customise as needed.
# ============================================================================

# ============================================================================
# Server Configuration
# ============================================================================
TTS_HOST=0.0.0.0
TTS_PORT=8000

# Host port exposed outside the container (used by docker-compose)
TTS_HOST_PORT=8003

# Monitoring endpoints
TTS_MONITORING_HOST=0.0.0.0
TTS_MONITORING_PORT=9093

# Connection limits
TTS_MAX_CONNECTIONS=50

# Logging level (DEBUG, INFO, WARNING, ERROR)
TTS_LOG_LEVEL=INFO

# ============================================================================
# Synthesis Defaults
# ============================================================================
TTS_DEFAULT_VOICE=af_sarah
TTS_DEFAULT_LANGUAGE=en-us
TTS_DEFAULT_SPEED=1.0
TTS_DEFAULT_FORMAT=wav
TTS_ALLOW_STREAMING=true

# Backend selection: kokoro (CPU) or chatterbox (GPU)
TTS_BACKEND=kokoro
TTS_CHATTERBOX_DEVICE=cuda

# ============================================================================
# Model Assets
# ============================================================================
TTS_MODEL_PATH=kokoro-v1.0.onnx
TTS_VOICES_PATH=voices-v1.0.bin

# Output / log directories
TTS_OUTPUT_DIR=output
TTS_LOG_DIR=/app/logs
